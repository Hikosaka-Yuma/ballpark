<!DOCTYPE html>
<html>
  <head>
    <title>Boll</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class = "navbar nabvar-defalut">
      <div class = "container">
        <%= link_to root_path do %>
          <span class ="header-title">Ballpark.com</span>
        <% end %>
        <ul class = "nav navbar-nav navbar-right">
          <li class = "meet-menu">
            <% if logged_in? %>
              <%= link_to new_meeting_path do %>
              <span class = "meeting">オフ会作成</span>
            <% end %>
          </li>
          <li class = "watchi-menu">
            <%= link_to new_watching_path do %>
            <span class = "watching">観戦イベント作成</span>
            <% end %>
          </li>
          <li class = "mypage-menu">
            <%= link_to user_path(id: current_user.id) do %>
              <span class = "mypage">マイページ</span>
              <% end %>
          </li>
          <li class = "logout">
            <%= link_to "ログアウト", logout_path, method: :delete %>
          </li>
          <% else %>
          <% end %>
        </ul>
      </div>
    </nav>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    <p class="notice"><%= notice %></p>
    <%= yield %>
<script>
  $(function(){
    $(".alert").fadeOut(5000);
  });
</script>
  </body>
</html>
